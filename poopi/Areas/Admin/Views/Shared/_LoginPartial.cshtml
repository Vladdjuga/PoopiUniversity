@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "AdminAccount",new { area="admin"}, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                <p class="nav-link-white user-name">Hello @User.Identity.GetUserName()!</p>
            </li>
            <li><a class="nav-link-white" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}