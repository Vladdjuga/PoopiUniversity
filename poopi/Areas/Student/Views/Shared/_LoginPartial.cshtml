@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "StudentAccount", new { area = "student" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "StudentManage", routeValues: new { area = "student" }, htmlAttributes: new { title = "Manage", @class = "nav-link-white" })
            </li>
            <li><a class="nav-link-white" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}